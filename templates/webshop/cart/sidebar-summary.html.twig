            <div class="cart block JS--cartWrapper">
                <div class="block-header px-3 px-md-2">
                    <span class="h6 checkout--sidebar-title">Kosár tartalma</span>
                    <a class="text--toolLink float-right" href="{{ path('site-checkout-step1-pickExtraGift') }}">Szerkeszt</a>
                </div>
                <div class="cart-body px-3 px-md-2">
                    <div class="JS--resultWrapper cart--scroll">
                        {{ include('webshop/cart/_cart-items-widget.html.twig') }}
                    </div>
                </div>
                <div class="cart-body px-3 px-md-2 pt-1">
                    <div class="cart-itemX text-sm">
                        <div class="row d-flex align-items-center text-center">
                            <div class="col-12 pr-0">
                                {% include 'webshop/cart/_cart-message-widget.html.twig' with {'message': order.currentOrder.message, 'messageAuthor':  order.currentOrder.messageAuthor} %}
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">A szállítási díj a megadott adataid szerint került kiszámításra.</div>
                    <ul class="order-summary mb-0 list-unstyled">
                        <li class="order-summary-item">
                            <span>Részösszeg </span>
                            <span>{{  order.summary.totalBeforeDiscount|money }}</span>
                        </li>
                        <li class="order-summary-item">
                            <span>Szállítás</span>
                            <span>
                                <span class="JS--summaryDeliveryFee">{{ order.currentOrder.deliveryFee|number_format(0, ',', ' ') }}</span> Ft
                            </span>
                        </li>
                        <li class="order-summary-item text-muted-extra">
                            <span>Kedvezmény</span>
                            <span>25%:</span>
                        </li>
                        <li class="order-summary-item border-0">
                            <span>Fizentendő {# totalAmountToPay #}</span>
                            <span class="JS--summaryTotalPos order-summary-total" data-summary-total="{{ order.summary.totalAmountToPay }}">
                                <span class="JS--summaryTotal">{{ order.summary.totalAmountToPay|number_format(0, ',', ' ') }}</span> Ft
                            </span>
                        </li>
                    </ul>
                </div>
            </div>