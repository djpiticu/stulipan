{{ form_start(shippingMethodForm, { 'attr': {'class': '',
    'data-wrapper-shipping-form': '',
}}) }}
{% if not shippingMethodForm.vars.valid %}
    <div class="JS--alertMessage alert alert-danger mt-3" role="alert" data-alert-message>
        <i class="fas fa-exclamation-circle mr-1 text-muted"></i>
        {% for error in shippingMethodForm.shippingMethod.vars.errors %}
            {{ error.message }}
        {% endfor %}
    </div>
{% endif %}
<div class="border rounded mt-3">
        <div class="row no-gutters">
            <div class="col-lg-12 mb-1 mb-sm-0">
                {% for choice in shippingMethodForm.shippingMethod %}
{#                    {% if shippingMethods[loop.index0].enabled == true %}#}

                        <div class="w-100 checkout-shipping-item JS--choiceContainer {% if choice.vars.checked is defined and choice.vars.checked %}selected{% endif %}">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="JS--Button-pickShipping btn-loading-has-bg" data-selector="button" data-eval="markShippingAsSelected">
                                        <div class="btn-loading-invisible">
                                            <div class="custom-control custom-radio">
                                                    <input class="custom-control-input" type="radio" id="{{ choice.vars.id }}" name="{{ choice.vars.full_name }}" required="required" value="{{ choice.vars.value }}" {{ choice.vars.checked ? 'checked' : '' }}/>
                                                    <label class="custom-control-label w-100" for="{{ choice.vars.id }}">
                                                        <div class="d-flex justify-content-start justify-content-sm-between">
                                                            <div class="checkout-shipping-item-title pl-3 pr-2 pr-sm-0">{{ choice.vars.label }}</div>
                                                            <div class="price--shipping text-nowrap font-italic">
                                                                {% if shippingMethods[loop.index0].price == 0 %}
                                                                    <span class="badge badge-light pt-1 px-2">INGYENES</span>
                                                                {% else %}
                                                                    {{ shippingMethods[loop.index0].price|money }}
                                                                {% endif %}
                                                            </div>
                                                        </div>

                                                        <div class="d-flex justify-content-start w-100">
                                                            <div class="checkout-shipping-item-description pl-3 pt-1">{{ shippingMethods[loop.index0].description|raw }}</div>
                                                        </div>
                                                    </label>
                                            </div>

                                        </div>
                                        <div class="loading-spinner" role="status"></div>

                                    </div>
                                </div>
                                {#<div class="col-sm-4 text-right mt-3 mt-sm-0">#}
                                    {#<span class="price--shipping">{{ shippingMethods[loop.index0].price|money }}</span>#}
                                {#</div>#}
                            </div>
                        </div>

{#                    {% endif %}#}
                {% endfor %}
            </div>
        </div>
</div>
{% do shippingMethodForm.shippingMethod.setRendered() %}
{{ form_end(shippingMethodForm) }}