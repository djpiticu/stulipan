	<section name="ajandek_valasztasa">
		<div class="container mb-4">
			<div class="row">
                <div class="col-lg-12">
                    <div class="cartX bg-white">
                        <div class="cart-wrapper">

                            <!-- header -->
                            <div class="checkout-block-header mb-4">
                                <div class="row">
                                    <div class="col-xl-8 mx-autoX">
                                        <h4 class="text-uppercase">Válassz ajándékot</h4>
                                        <!--p class="text-sm text-muted">Jelöld be azokat a kiegészítő termékeket, amiket még a kosárba szeretnél tenni!</p-->
                                    </div>
                                </div>
                            </div>

                            <!-- body -->
                            <div class="cart-body bg-white px-4 pb-4">

                                <!-- Products Slider-->
                                <div class="owl-carousel owl-theme product-slider owl-loaded owl-drag">

                                    <div class="owl-stage-outer">
                                        <div class="owl-stage" style="transform: translate3d(0px, 0px, 0px); transition: all 0s ease 0s; width: 2280px;">

                                            {% if termekek is defined %}
                                            {% for termek in termekek %}
                                            <!-- Product -->
                                            <div class="owl-item active" style="width: 228px;">
                                                <div class="product-slider-item">
                                                    <div class="product">
                                                        <div class="product-image">
                                                            <!--div class="ribbon ribbon-primary">Sale</div-->
                                                            <img src="{{ asset('/uploads/images/termekek/' ~ termek.image) }}" alt="..." class="img-fluid">
                                                            <div class="product-hover-overlay">
                                                                <!--a href="detail.html" class="product-hover-overlay-link"></a-->
                                                                <div class="product-hover-overlay-buttons">
                                                                    <a href="detail.html" class="btn btn-dark btn-buy"><i class="fa-search fa"></i><span class="btn-buy-label ml-2">View</span></a>
                                                                    {{ render(controller('App\\Controller\\Shop\\CartController::addItemForm', {'id' : termek.id})) }}
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="py-2">
                                                            <p class="text-muted text-sm mb-1">{{ termek.category }}</p>
                                                            <h3 class="h6 text-uppercase mb-1">{{ termek.productName }}</h3>
                                                            <span class="text-muted">{{ termek.grossPrice|number_format(0, ',', ' ') }} Ft</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- /Product -->
                                            {% endfor %}
                                            {% endif %}

                                        </div>
                                    </div>

                                    <!--div class="owl-nav disabled">
                                        <button type="button" role="presentation" class="owl-prev"><img src="img/prev.svg" alt="" width="50"></button>
                                        <button type="button" role="presentation" class="owl-next"><img src="img/next.svg" alt="" width="50"></button>
                                    </div>
                                    <div class="owl-dots"><button role="button" class="owl-dot active"><span></span></button>
                                        <button role="button" class="owl-dot"><span></span></button>
                                    </div>
                                    <div class="owl-thumbs"></div-->
                                </div>

                            </div>


                        </div>


                    </div>


                </div>
			</div>
		</div>
	</section>


