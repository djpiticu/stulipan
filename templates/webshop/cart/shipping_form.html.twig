
        <div class="row">
            {% if not form.shipping.shipping.vars.valid %}
            <div class="col-lg-12 mb-3">
                <div class="alert alert-danger" role="alert"> {{ form.shipping.shipping.vars.errors }} </div>
            </div>
            {% endif %}
            {% for choice in form.shipping.shipping %}
            <div class="col-lg-12 mb-3">
                <div class="border p-3 rounded JS--choiceContainer {% if choice.vars.checked is defined and choice.vars.checked %}selected{% endif %}">
                    <div class="row">
                        <div class="col-sm-8">
                            <div class="custom-control custom-radio JS--Button-pickChoice">
                                {#{% if choice.vars.checked is defined and choice.vars.checked == 1 %}visual-valami{% endif %}"#}
                                <input class="custom-control-input" type="radio" id="{{ choice.vars.id }}" name="{{ choice.vars.full_name }}" required="required" value="{{ choice.vars.value }}" {{ choice.vars.checked ? 'checked' : '' }}/>
                                <label class="custom-control-label h5 text-lg text-gray font-weight-bold" for="{{ choice.vars.id }}">
                                    {{ choice.vars.label }}
                                </label>
                            </div>
                            <div class="text-muted mb-0 pl-4 pt-1">{{ shippingMethods[loop.index0].description|raw }}</div>
                        </div>
                        <div class="col-sm-4 text-sm-right mt-3 mt-sm-0">
                            {#<img src="https://coderthemes.com/hyper/assets/images/payments/paypal.png" height="25" alt="paypal-img">#}
                            <span class="font-weight-bold text-gray">{{ shippingMethods[loop.index0].cost|number_format(0, ',', ' ') }} Ft</span>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
            {% do form.shipping.shipping.setRendered() %}

        </div>
