                                                                                    <li class="list-group-item JS--cardMessage">Ezen az email címen és telefonszámon fogunk értesíteni a rendelés állapotáról, illetve a sikeres kézbesítésről.</li>
                                                                                    <li class="list-group-item JS--cardMessage">Ezen az email címen és telefonszámon fogunk értesíteni a rendelés állapotáról, illetve a sikeres kézbesítésről.</li>
                                                                                    <li class="list-group-item JS--cardMessage">Ezen az email címen és telefonszámon fogunk értesíteni a rendelés állapotáról, illetve a sikeres kézbesítésről.</li>

                                                                                </ul>
                                                                                {#</div>#}
                                                                            </div>
                                                                        {% endfor %}

                                                                    </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                {#{% if customerForm is defined and not null %}#}
                {% set customerForm = messageAndCustomerForm.customer %}
                <div name="sender_basic_details" class="mb-20px">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="cart bg-white shadow-none">
                                <div class="cart-wrapper JS--messageWrapperX">

                                    <div class="checkout-block-header">
                                        <h4>Add meg adataidat</h4>
                                    </div>

                                    {{ include('webshop/cart/alert-customerBasic-insert.html.twig') }}
                                    <div class="row">
                                        <div class="col-lg-12 mt-3 p-3X p-md-4X">
                                            <div class="block-body">
                                                <div class="row">
                                                    <div class="col-md-8 col-lg-7 order-2 order-md-1">
                                                        <div class="JS--formWrapperX">
                                                            {{ include('webshop/cart/user-basicDetails-form.html.twig') }}
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4 col-lg-5 order-1 order-md-2">
                                                        <div class="card ml-lg-2 ml-0 mt-md-4 mb-2 mb-lg-0">
                                                            <div class="minicard--body bg-light d-flex flex-column h-100">
                                                                                        <span class="text-sm text-mutedX">
                                                                                            {#<span class="font-weight-bold text-muted">Jo tudni</span>#}
                                                                                            <i class="fas fa-info-circle mr-1"></i>
                                                                                            Ezen az email címen és telefonszámon fogunk értesíteni a rendelés állapotáról, illetve a sikeres kézbesítésről.
                                                                                        </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    {#<button type="submit" class="JS--Button-gotoStep2X btn btn-lg btn-success order-1 order-lg-2 px-lg-6 py-4">Tovább a címzett megadásához <i class="fa fa-chevron-right"></i></button>#}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {#{% endif %}#}

                {# Render CSRF token etc .#}
                <div style="display:none">
                    {{ form_rest(messageAndCustomerForm) }}
