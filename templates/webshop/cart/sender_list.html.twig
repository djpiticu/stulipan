<div class="row">
    <div class="col-lg-12">
        <div class="row row-narrow">
        {% if senders is defined %}
            {% for sender in senders %}
                {#{{ include('webshop/cart/sender_widget.html.twig') }}#}
                <div class="col-md-6 col-lg-6 col-narrow mb-10px">
                    <div class="JS--item card card--choice h-100 {% if selectedSender is defined and selectedSender == sender.id %} selected {% endif %}">
                        <div class="minicard--body selected-body d-flex flex-column h-100">
                            {#{% if sender.company is defined and sender.company %}#}
                                {#<div class="font-weight-bold card-titleX">{{ sender.company }}</div>#}
                            {#{% endif %}#}
                            {#<a class="" data-toggle="collapse" href="#collapse{{ loop.index }}" role="button" aria-expanded="false" aria-controls="cardCollapse{{ loop.index }}">#}
                            <div class="font-weight-bold card-titleX mb-1">
                                    {{ sender.company is defined and sender.company ? sender.company ~ ' /' : ''}} {{ sender.name }}
                            </div>
                            {#</a>#}
                            <div class="collapseX mb-3" id="cardCollapse{{ loop.index }}">
                                <span class="minicard--address">Telefonszám: <em>{{ sender.phone }}</em></span> <br>
                                <span class="minicard--address">{{ sender.address.zip }} {{ sender.address.city }}, {{ sender.address.street }}</span> <br>
                                <span class="minicard--address">{{ sender.address.province }}, {{ sender.address.country }}</span>
                            </div>

                            <div class="d-flex align-items-end h-100">
                                <div>
                                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                        <a class="JS--Button-pickSender minicard--mainLink" href="{{ path('cart-pickSender', {id: sender.id}) }}">Kiválaszt</a>
                                    {% endif %}

                                    <a href="#" class="JS--Button-editSender minicard--toolLink" data-url="{{ path('cart-editSender', {id: sender.id}) }}">Szerkeszt</a> |
                                    <a href="#" class="minicard--toolLink">Töröl</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="col-lg-12 col-narrow mt-10px">
                    <a href="" class="JS--Button-editSender btn btn-outline-dark px-3" data-url="{{ path('cart-editSender') }}"><i class="fas fa-plus mr-1"></i> Hozáadás</a>

                </div>
                {#<div class="col-md-6 col-lg-4 col-narrow">#}
                    {#<div class="card visual-picker border-dashed d-flex align-items-center pt-4 pb-5">#}

                        {#<a href="" class="JS--Button-editSender tile-link recipient--toolLink" data-url="{{ path('cart-editSender') }}"></a>#}
                        {#<div class="card-body w-100 pt-4 pb-4 mt-1">#}
                            {#<span class="visual-picker-content card-text text-center">#}
                                {#<i class="fas fa-plus fa-3x mb-2"></i>#}
                                {#<span class="recipient--link d-block">Hozáadás</span>#}
                            {#</span>#}
                        {#</div>#}
                    {#</div>#}
                {#</div>#}
            {% endif %}
        {% endif %}
        </div>
    </div>

</div>