{% extends 'webshop/site/base_site.html.twig' %}

{% block title %}
    {{ kategoria }} | {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_content %}

	<main>
		<div class="container pb-5">
			<div class="row">
                <!-- Breadcrumbs -->
                <ol class="breadcrumb col-12 justify-content-center text-center">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">{{ kategoria }}</li>
                </ol>
				<!-- Grid -->
				<div class="products-grid col-12 sidebar-none">
                    <div class="hero-content pb-5 text-center">
                        <h1 class="hero-heading">{{ kategoria }}</h1>
                        <div class="row">
                            <div class="col-xl-8 offset-xl-2"><p class="lead text-muted">Születésnapra, évfordulóra, randira, köszönet kifejezésére, babaköszöntőre, vendégségbe, ballagásra, vagy csak úgy, ajándékozz egy szép virágcsokrot. Csak válaszd ki a csokrot és a kézbesítésről mi gondoskodunk.</p></div>
                        </div>
                    </div>

                    {{ include('/webshop/site/product_list_widget.html.twig') }}

				</div>
				<!-- / Grid End-->
			</div>
		</div>
	</main>



{% endblock %}

{% block javascripts %}
	{{ parent() }}
{% endblock %}
