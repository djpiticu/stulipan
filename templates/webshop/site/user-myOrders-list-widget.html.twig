<div class="list-group-order list-group-item py-30px">
    <div class="d-flex justify-content-between mb-4">
        <div class="">
            <div class="text-muted-extra font-weight-bold">Rendelés száma: </div>
            #{{ order.number }}
        </div>
        <div class="">
            <div class="text-muted-extra font-weight-bold">Címzett: </div>
            {{ order.shippingName }}
        </div>
        <div class="">
            <div class="text-muted-extra font-weight-bold">Kézbesítés napja: </div>
            2019-09-24
        </div>
    </div>
    <div class="d-block d-md-flex justify-content-md-between">
        <div class="d-flex flex-column justify-content-center d-md-block text-center text-md-left">
            <div class="">
                {% for item in order.items %}
                    <a href="{{ path('site-product-show', {'slug': item.product.slug}) }}" target="_blank">
                        <img class="img-thumbnailX mb-1 mr-2" src="{{ uploaded_asset(item.product.coverImage)|imagine_filter('product_thumbnail') }}" width="80px;" />
                    </a>
                {% endfor %}
            </div>
{#            <div class="my-2">Címzett: {{ order.shippingName }}#}
{#            </div>#}
        </div>
        <div class="d-flex align-items-center justify-content-center">

        </div>
        <div class="d-flex align-items-center justify-content-center flex-column">
            {% if order.isUnpaid %}
                <div class="text-sm text-danger mb-2 mt-2 mt-md-0">Fizetésre vár</div>
            {% endif %}
            {% if order.isFulfilled %}
                <div class="text-sm text-success mb-2 mt-2 mt-md-0">It's delivered!</div>
            {% endif %}
            <a href="{{ path('site-user-myOrder', {'id': order.id}) }}" class="btn btn-outline-secondary ">Rendelés részletei</a>
        </div>
    </div>
</div>