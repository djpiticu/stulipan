{% extends 'webshop/site/base-checkout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block bodyClass %}checkout-page checkout-shopi{% endblock %}

{% block page_content %}

    <div class="JS--globalWrapper" data-wrapper-global>

        {% block modal %}
        {% endblock %}

        <div class="cart-collapse">
            <div class="d-flex d-lg-none col-sm-4 col-lg-4 mx-auto navbar--logo-checkout justify-content-center my-lg-0 order-lg-1 order-1 my-3 px-0 px-md-10px">
                <a href="{{ path('homepage') }}" class="navbar-brand order-lg-1 order-2">
{#                    <span class="h3 font-weight-bold text-uppercase text-primary ml-0">tulipan<span class="text-danger">.</span>futar  </span>#}
                    <img src="{{  asset('uploads/images/icons/rafina-logo-budapest-1.png') }}" class="store-logo">
                </a>
            </div>
            <div class="cart-collapse-header">
                <div class="container">
                    <div class="d-flex justify-content-between align-items-center py-3">
                        <a href="#" class="cart-collapse-title" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                            <svg class="svg-icon svg-icon-heavy addtocart">
                                <use xlink:href="#cart-1"> </use>
                            </svg>
                            {{ 'cart.show-order-summary'|trans }}
                        </a>
                        <span class="JS--summaryTotal cart-collapse-total">{{ order.summary.totalAmountToPay|money }}</span>
                    </div>
                </div>
            </div>
            <div class="cart-collapse-body collapse" id="collapseExample">
                <div class="container">
                        <div class="row">
                            <div class="col-md-12 mb-2 pt-4">
                                {% block cartCollapse %}
                                {% endblock %}
                            </div>
                        </div>
                </div>
            </div>
        </div>

        <div class="shopi-content">
            <div id="left_column" class="shopi-left">
                <div class="container shopi-left-body">
{#                    style="max-width: 500px;"#}
                    <div class="row">
                        <div class="col-md-12 correction-no-padding">
                            <div class="d-none d-lg-flex col-sm-4 col-lg-4 mx-auto navbar--logo-checkout justify-content-center my-lg-0 order-lg-1 order-1 pb-2 px-0 px-md-10px">
                                <a href="{{ path('homepage') }}" class="navbar-brand order-lg-1 order-2">
                                    <img src="{{  asset('uploads/images/icons/rafina-logo-budapest-1.png') }}" class="store-logo">
                                </a>
                            </div>

                            <div id="progress_bar">
                                {% include('webshop/cart/progress-bar-3step-checkout.html.twig') %}
                            </div>
                            {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                                {% include('webshop/cart/already-registered-widget.html.twig') %}
                            {% endif %}

                            {% block leftColumn %}
                            {% endblock %}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            {% block gotoNext %}
                            {% endblock %}
                        </div>
                    </div>
                </div>
            </div>
            <div id="right_column" class="shopi-right">
                <div class="container shopi-right-body">
                    <div class="row navbar-stickyX sticky-topX">
                        <div class="col-md-12 pt-4 px-5">

                            {% block rightColumn %}
                            {% endblock %}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% block contentWide %}
    {% endblock %}

    {% block contentSecondary %}
    {% endblock %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
