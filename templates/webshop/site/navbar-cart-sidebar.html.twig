<div class="sidebar sidebar-right fade" id="sidebar--Cart" tabindex="-1" role="dialog" aria-labelledby="sidebarLabel" aria-hidden="true">
    <div class="sidebar-dialog sidebar-dialog-scrollable sidebar-dialog-centered" role="document">
        <div class="sidebar-content">
            <div class="sidebar-header">
                <span class="sidebar-title h5" id="sidebarLabel">{{ 'cart.cart-content'|trans }}</span>
                <button type="button" class="close" data-dismiss="sidebar" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="sidebar-body">
                <div class="d-flex flex-column justify-content-between h-100">
                    <div class="cart">
                        {% include 'webshop/cart/cart.html.twig' with {
                            'showQuantity': false,
                            'showRemove': false,
                            'showTotal': true,
                        } %}
{#                        {% if order.items is empty %}#}
{#                            {% include('webshop/cart/cart-is-empty.html.twig') %}#}
{#                        {% endif %}#}

{#                        {% if order.items is defined %}#}
