{#                                <div class="cart-item">#}
{#                                    {% include('webshop/cart/cart-item.html.twig') %}#}
{#                                </div>#}
{#                            {% endfor %}#}

{#                            <div class="cart-item cart-total">#}
{#                                <span class="text-uppercase text-muted">Összesen</span>#}
{#                                <strong class="text-uppercase">{{  order.summary.totalAmountToPay|money }}</strong>#}
{#                            </div>#}
{#                        {% endif %}#}
                    </div>
                </div>
            </div>
            <div class="sidebar-footer">
                <div class="d-flex flex-column justify-content-between flex-grow-1">
                        <button class="JS--Button-gotoCheckoutX btn btn-lg btn-warning w-100" data-webshop-selector="button" data-eval="showCart" data-url="{{ path('site-checkout-step0-pickExtraGift') }}" >
                            <span class="btn-loading-invisible"><svg class="svg-icon"><use xlink:href="#cart-1"> </use></svg>{{ 'cart.continue-to-checkout'|trans }}</span>
                            <div class="loading-spinner" role="status"></div>
                        </button>

                        <div class="mt-3">
                            <div class="card-body bg-warning-lightenX text-center p-0 px-2">
                                <a href="{{ path('site-checkout-step0-pickExtraGift') }}" class="text-link-checkout mt-0 d-block">{{ 'cart.edit-cart-content'|trans }}</a>
                                {#                                    <img alt="" class="img-fluid h-15px left-block mb-2 mr-4" src="http://www.stulipan.dfr/uploads/images/icons/CIB_logo.png">#}
                                {#                                    <img alt="" class="img-fluid h-15px left-block mb-2" src="http://www.stulipan.dfr/uploads/images/termekek/paypal.png">#}
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>

