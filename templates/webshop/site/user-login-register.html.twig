{% extends 'webshop/site/base_site.html.twig' %}


{# this tag only applies to the forms defined in this template #}
{#{% form_theme form 'bootstrap_4_layout.html.twig' %}#}

{% block title %}
    {{ title }}
{% endblock %}



{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('webshop/site/checkout.css') }}" rel="stylesheet" />
{% endblock %}

{% block page_content %}


    <section name="user_regisztracio">
        <div class="container mb-3 mt-3 mt-lg-4">
            <div class="row justify-content-center">
                <div class="col-lg-5 mb-3">
                    <div class="cart block bg-white">
                        <div class="cart-wrapper">

                            <div class="block-body">
                                <div class="row">
                                    <div class="col-lg-12 mb-4">
                                        <h4 class="font-weight-normal">Bejelentkezés</h4>
                                    </div>
                                    {#<div class="col-lg-12 text-muted mb-5">#}
                                        {#Jelentkezz be fiókodba, hogy tudd követni rendelésed állapotát, elmentett címre kérni a kiszállítást.#}
                                    {#</div>#}
                                    {% if error is defined and error is not empty %}
                                    <div class="col-lg-12 mb-3">
                                        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    </div>
                                    {% endif %}

                                    <div class="col-lg-12">
                                        <form action="{{ path('site-login') }}" method="post" name="login">
                                            <div class="form-group">
                                                <label for="_username" class="sr-onlyX form-label">Email cím</label>
                                                <input type="text" id="username" name="_username" class="form-control" placeholder="" required {% if last_username is defined and last_username is empty %}autofocus{% endif %} value="{{ last_username is defined ? last_username : '' }}" />
                                            </div>

                                            <div class="form-group">
                                                <label for="inputPassword" class="sr-onlyX form-label">Jelszó</label>
                                                <div class="input-group">
                                                    <input type="password" id="inputPassword" name="_password" class="form-control border-right-0X" placeholder="" required />
                                                </div>
                                            </div>

                                            <div class="form-group mb-3 text-left">
                                                <div class="custom-control custom-checkbox text-sm text-muted align-items-center">
                                                    <input type="checkbox" id="checkbox-signin" name="_remember_me" class="custom-control-input" checked="checked">
                                                    <label class="custom-control-label align-middle" for="checkbox-signin">Remember me</label>
                                                </div>
                                            </div>
                                            {#{% set referer = app.request.server.get('http-referer')|default('/') %}#}
                                            {#<input type="hidden" name="_target_path" value="{{ path('site-cart') }}" />#}
                                            {#<input type="hidden" name="_target_path" value="{{ app.session.get('_security.main.target_path') }}" />#}
                                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                            <div class="mt-2 text-center mb-1">
                                                <button type="submit" value="Mentés" class="btn btn-primary" formnovalidate><i class="fa fa-sign-in-alt mr-2"></i> Bejelentkezek</button>
                                            </div>
                                        </form>
                                    </div>


                                </div>
                                {#{{ render(controller('App\\Controller\\Shop\\RegistrationController::showLoginForm')) }}#}
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="cart bg-white">
                        <div class="cart-wrapper">

                            <div class="block-body">
                                {{ include('webshop/site/_registration-form.html.twig') }}
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <section name="tovabb_lepes">
        <div class="container mb-5">
            <div class="row">
                <div class="col-lg-12">

                    <div class="d-flex justify-content-between flex-column flex-lg-row">

                        {# Render CSRF token etc .#}
                        <div style="display:none">
                            {#{{ form_rest(form) }}#}
                        </div>

                        {#<button type="submit" value="Mentés" class="btn btn-success order-1 order-lg-2" formnovalidate>Regisztrálok </button>#}
                    </div>

                </div>
            </div>
        </div>
    </section>


{% endblock %}

{% block javascripts %}
	{{ parent() }}
    <script>

    </script>
{% endblock %}
