{% extends 'admin/base_admin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}
    {{ pageTitle }}
{% endblock %}

{% block bodyClass %}print{% endblock %}

{% block page_content %}

    {% block modal %}
    {% endblock %}

    <div class="row">
        <div class="col-lg-12 col-xl-11 mx-auto px-lg-4">
            {% block header %}
                <div class="row mt-1 mt-sm-3">
                    <div class="col-lg-12 mt-2">
                        <div class="pb-2">
                            <div class="page-title h3 d-inline mr-md-2 mr-1">{% block headerTitle %}{{ pageTitle }}{% endblock %}</div>
                        </div>
                    </div>
                </div>
            {% endblock %}

            <div class="row">
                <div class="col-sm-12 mb-3">
                    {% block headerMoreActions %}
                    {% endblock %}
                </div>
            </div>

            {% block beforeContent %}
            {% endblock %}

            {% block mainContent %}
            <div class="row row-5">
                <div class="col-md-8 correction-no-padding">
                    {% block content %}
                    {% endblock %}
                </div>
                <div id="__SIDEBAR" class="col-md-4 correction-no-padding orderDetail--sidebarX">
                    {% block sidebar %}
                    {% endblock %}
                </div>
            </div>
            {% endblock %}

            {% block additionalContent %}
            {% endblock %}


        </div>
    </div>
{% endblock %}

