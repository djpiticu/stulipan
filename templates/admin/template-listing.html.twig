{% extends 'admin/base_admin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}
    {{ pageTitle }}
{% endblock %}

{% block page_content %}

    {% block modal %}
    {% endblock %}

    <div class="row">
        <div class="col-lg-12">
            {% block header %}
                <div class="row mt-1 mt-sm-3">
                    <div class="col-lg-12">
                        {% include 'admin/template-widget-breadcrumb.html.twig' %}
                    </div>
                    <div class="col-lg-12 mt-2">
                        <div class="d-flex flex-columnX flex-sm-row justify-content-between align-items-center align-items-sm-center">
                            <div class="page-title h3 d-inline mr-md-2 mr-1">{{ pageTitle }}</div>
                            <div class="d-flex justify-content-between">
                                {% block headerTopright %}
                                {% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endblock %}

            {% block beforeContent %}
            {% endblock %}

            {% block content %}
                <div class="row mt-2">
                    <div class="col-12 correction-no-padding">
                        <div class="card mb-20px">
                            <div class="card-body">
                                {% block contentFilter %}
                                {% endblock %}
                                {% block contentInner %}
                                    <div class="no-margins mt-3">
                                        <div class="table-responsive">
                                            <table class="table table-hover mb-0">
                                                <thead class="thead-light">
                                                    {% block tableHeader %}
                                                    {% endblock %}
                                                </thead>
                                                <tbody>
                                                    {% block tableBody %}
                                                    {% endblock %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                    {% block tableEmpty %}
                                    {% endblock %}
                                    {% block pagination %}
                                        <div class="pagerfanta mt-3">
                                            {% if paginator is defined and paginator is not empty %}
                                                {{ pagerfanta(paginator, 'twitter_bootstrap4', { 'prev_message': '← ' ~ 'generic.prev'|trans, 'next_message': 'generic.next'|trans ~ ' →'}) }}
                                            {% endif %}
                                        </div>
                                    {% endblock %}
                                {% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endblock %}
        </div>
    </div>

{% endblock %}

