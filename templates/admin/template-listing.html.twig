{% extends 'admin/base_admin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_content %}

    {% block modal %}
    {% endblock %}

    {% block header %}
        <div class="row mt-3 mb-3">
            <div class="col-lg-12 mb-2">
                {% include 'admin/template-widget-breadcrumb.html.twig' %}
            </div>
            <div class="col-lg-12">
                <div class="page-title h1 d-inline mr-md-2 mr-1">{{ pageTitle }}</div>

                <div class="admin-card-topright">
                    {% block headerTopright %}
                    {% endblock %}
                </div>
            </div>
        </div>
    {% endblock %}

    {% block beforeContent %}
    {% endblock %}

    {% block content %}
        <div class="row row-5X">
            <div class="col-12 px-0 px-md-10px">
                <div class="card mb-20px">
{#                    <div class="card-header">#}
{#                        <ul class="nav nav-pills">#}
{#                            {% for link in filterQuickLinks %}#}
{#                                <li class="nav-item mr-2">#}
{#                                    <a href="{{ link['url'] }}" class="btn-link-secondaryX nav-link {% if link['active'] is defined and link['active'] %}active{% endif %} mr-2">{{ link['name'] }}</a>#}
{#                                </li>#}
{#                            {% endfor %}#}
{#                        </ul>#}
{#                    </div>#}
                    <div class="card-body">
                        {% block contentFilter %}
                        {% endblock %}
                        {% block contentInner %}
                            <div class="no-margins">
                                <div class="table-responsive mb-3">
                                    <table class="table table-hover mb-0">
                                        <thead class="thead-light">
                                            {% block tableHeader %}
                                            {% endblock %}
                                        </thead>
                                        <tbody>
                                            {% block tableBody %}
                                            {% endblock %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            {% block tableEmpty %}
                            {% endblock %}
                            {% block pagination %}
                                <div class="pagerfanta">
                                    {% if paginator is defined and paginator is not empty %}
                                        {{ pagerfanta(paginator, 'twitter_bootstrap4', { 'prev_message': '← ' ~ 'generic.prev'|trans, 'next_message': 'generic.next'|trans ~ ' →'}) }}
                                    {% endif %}
                                </div>
                            {% endblock %}
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

{% endblock %}

