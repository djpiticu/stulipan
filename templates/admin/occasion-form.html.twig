    {{ form_start(form, { 'attr': {'class': '' }}) }}
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group row">
                <div class="col-md-12">
                    {{ form_label(form.specialDate) }}
                    <div class="field-group" id="JS--datum">
                        <div class="field-item field-append">
                            <div class="field-addon-append">
                                <i class="far fa-calendar-alt"></i>
                            </div>
                        </div>
                        {{ form_widget(form.specialDate, {'attr': {
                            'class': 'form-control',
                        }}) }}
                    </div>
                    {{ form_errors(form.specialDate) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-12">
                    {{ form_label(form.dateType) }}
                    <div class="form-row">
                        {% for choice in form.dateType %}
                            <div class="col-md-4 col-sm-6">
                                {{ include('admin/visualPicker.html.twig') }}
                            </div>
                        {% endfor %}
                        {% do form.dateType.setRendered() %}
                        {{ form_errors(form.dateType) }}
                    </div>
                </div>
            </div>

{#			#}{# Render CSRF token etc .#}
{#			<div style="display:none">#}
{#				{{ form_rest(form) }}#}
{#			</div>#}

            <div class="form-group row">
                <div class="col-md-12">
                    <input type="submit" value="Mentés" class="btn btn-primary mr-1" formnovalidate>
                    <a href="{{ cancelUrl }}" class="btn btn-secondary">Mégse</a>
                </div>
            </div>

        </div>
    </div>
    {{ form_end(form) }}