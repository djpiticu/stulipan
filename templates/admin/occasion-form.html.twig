    {{ form_start(form, { 'attr': {'class': '' }}) }}
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label for="{{ form.specialDate.vars.full_name }}" class="form-label">Dátum</label>
                <div class="" id="JS--datum">
                    <div class="field-item field-append">
                        <div class="field-addon-append">
                            <i class="far fa-calendar-alt"></i>
                        </div>
                    </div>
                    {{ form_widget(form.specialDate, {'attr': {
                        'placeholder': 'ÉÉÉÉ-HH-NN',
                        'autocomplete': 'off',
                    }}) }}
                </div>
                {{ form_errors(form.specialDate) }}
            </div>

            <div class="form-group mb-0">
                <label for="{{ form.dateType.vars.full_name }}" class="form-label">Típus</label>
                <div class="form-row">
                    {% for choice in form.dateType %}
                        <div class="col-md-4 col-sm-6">
                            {{ include('admin/visualPicker.html.twig') }}
                        </div>
                    {% endfor %}
                    {% do form.dateType.setRendered() %}
                    {{ form_errors(form.dateType) }}
                </div>
            </div>

{#			#}{# Render CSRF token etc .#}
{#			<div style="display:none">#}
{#				{{ form_rest(form) }}#}
{#			</div>#}

            <div class="form-group row mb-0">
                <div class="col-md-12">
                    <input type="submit" value="{{ 'generic.save'|trans }}" class="btn btn-primary mr-1" formnovalidate>
                    <a href="{{ cancelUrl }}" class="btn btn-secondary">{{ 'generic.cancel'|trans }}</a>
                </div>
            </div>

        </div>
    </div>
    {{ form_end(form) }}