{% extends 'admin/base_admin.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block page_content %}

	<!-- page title -->
	{{ include('/admin/_title_widget.html.twig') }}

	<!-- header of default page content widget -->
	{{ include('/admin/_header_of_default_page_content.html.twig') }}

	<div class="row mb-2">
		<div class="col-lg-8">
		</div>
		<div class="col-lg-4">
		</div>
	</div>

	{#{{ include('/admin/settings/vat-rate-form.html.twig') }}#}
    {{ form_start(form, { 'attr': {'class': '' }}) }}
        {% if parameters is defined and parameters %}
        {% for key, value in parameters  %}
            <div class="mb-2">
                <div class="form-group row">
                    <div class="col-sm-12 col-md-3">
                        {{ form_label(form.offsetGet(key)) }}
                    </div>
                    <div class="col-sm-12 col-md-8 col-xl-6 mr-auto">
                        {{ form_widget(form.offsetGet(key)) }}
                        {{ form_errors(form.offsetGet(key)) }}
                    </div>
                </div>
            </div>
        {% endfor %}
        {% endif %}

        {# Render CSRF token etc .#}
        <div style="display:none">
            {{ form_rest(form) }}
        </div>

        <div class="col-12 mb-2">
            <input type="submit" value="Mentés" class="btn btn-lgg btn-info mr-1" formnovalidate>
            <a href="{{ path('vat-rate-list') }}" class="btn btn-secondary">Mégse</a>
        </div>
    {{ form_end(form) }}
    {% do form.setRendered() %}



	<!-- footer of default page content widget -->
	{{ include('/admin/_footer_of_default_page_content.html.twig') }}

{% endblock %}

