{% extends 'admin/base_admin.html.twig' %}


{% block title %}
	{{ title }}
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
{% endblock %}


{% block page_content %}
		
	{% block LISTA %}

		<!-- page title -->
        {#{{ include('/admin/_title_widget.html.twig') }}#}

        {{ include('/admin/_alert_widget.html.twig') }}

		<!-- header of default page content widget -->
        {#{{ include('/admin/_header_of_default_page_content.html.twig') }}#}


        {#<div class="row mt-3">#}
            {#<div class="col-lg-12">#}
                {#<div class="page-title h3 d-inline mr-md-2 mr-1">Szállítási módok</div>#}
                {#<div class="d-inline float-rightX">#}
                    {#<a href="{{ path('shipping-edit') }}" class="btn btn-outline-info mb-2"><i class="fas fa-plus-square mr-1"></i> Új szállítási  mód</a>#}
                    {#<a href="{{ path('delivery-date-type-edit') }}" class="btn btn-primary mb-2 ml-1"><i class="far fa-calendar-plus ml-1"></i> Új szállítási mód</a>#}
                {#</div>#}
            {#</div>#}
        {#</div>#}
            {{ include('/admin/_header_of_default_page_content.html.twig') }}
            <div class="row mb-3">
                <div class="col-lg-12">
                    <div class="page-title h3 d-inline mr-md-2 mr-1">Szállítási módok</div>
                    <div class="d-inline float-rightX">
                        <a href="{{ path('shipping-edit') }}" class="btn btn-outline-info mb-2"><i class="fas fa-plus-square mr-1"></i> Új szállítási  mód</a>
                        {#<a href="{{ path('delivery-date-type-edit') }}" class="btn btn-primary mb-2 ml-1"><i class="far fa-calendar-plus ml-1"></i> Új szállítási mód</a>#}
                    </div>
                </div>
            </div>
            {% if shippings is defined %}
                {% for item in shippings %}
                    <div class="col-md-12 mb-sm-3">
                        <div class="border-bottom py-1 pb-md-3 rounded shadow-smX bg-white">
                            <div class="row">
                                <div class="col-md-8 border-md-right mb-md-0 mb-1 pr-md-4">
                                    <div class="">
                                        <span class="entry-lg mb-1">{{ item.name }} </span>
                                        <div class="">
                                            <span class="badge badge-{{ item.enabled ? 'success' : 'danger' }} text-uppercase">{{ item.enabled ? 'Engedélyezve' : 'Letiltva' }}</span>
                                            <div class="h6 font-weight-bold font-italic d-inline-block ml-1 my-0"> {{ item.price|number_format(0, ',', ' ') }} Ft</div>
                                        </div>

                                    </div>
                                    <div class="text-muted mb-0">
                                        {{ item.description|raw  }}
                                    </div>

                                </div>
                                <div class="col-md-4 pl-md-2">
                                    <div class="text-muted">
                                        <a href="{{ path('shipping-edit', {'id': item.id}) }}" class="btn btn-sm btn-secondary mb-2">
                                            {#<i class="fas fa-edit mr-1"></i> #}
                                            Módosít</a> <br>
                                        <p class="text-xs text-muted-extra">
                                            <em>Létrehozva: {{ item.createdAt|date('Y-m-d')}}, {{ item.createdAt|date('H:i')}}</em> <br>
                                            <em>Utolsó módosítás: {{ item.updatedAt|date('Y-m-d')}}, {{ item.updatedAt|date('H:i')}}</em>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                {% endfor %}
            {% else %}
                <li><em>{{ noResult }}</em></li>
            {% endif %}
            {{ include('/admin/_footer_of_default_page_content.html.twig') }}



        {#<div class="row mt-3">#}
            {#<div class="col-lg-12">#}
                {#<div class="page-title h3 d-inline mr-md-2 mr-1">Fizetési módok</div>#}
                {#<div class="d-inline float-rightX">#}
                    {#<a href="{{ path('shipping-edit') }}" class="btn btn-outline-info mb-2"><i class="fas fa-plus-square mr-1"></i> Új fizetési  mód</a>#}
                {#</div>#}
            {#</div>#}
        {#</div>#}
        {{ include('/admin/_header_of_default_page_content.html.twig') }}
        <div class="row mb-3">
            <div class="col-lg-12">
                <div class="page-title h3 d-inline mr-md-2 mr-1">Fizetési módok</div>
                <div class="d-inline float-rightX">
                    <a href="{{ path('shipping-edit') }}" class="btn btn-outline-info mb-2"><i class="fas fa-plus-square mr-1"></i> Új fizetési  mód</a>
                </div>
            </div>
        </div>
        {% if payments is defined %}
            {% for item in payments %}
                <div class="col-md-12 mb-sm-3">
                    <div class="border-bottom py-1 pb-md-3 rounded shadow-smX bg-white">
                        <div class="row">
                            <div class="col-md-8 border-md-right mb-md-0 mb-1 pr-md-4">
                                <div class="">
                                    <span class="entry-lg mb-1">{{ item.name }} </span>
                                    {% if item.image is defined and item.image != '' %}
                                        <img class="img-fluid h-20px pl-3 mr-0 float-right" src="{{ asset('/uploads/images/termekek/' ~ item.image) }}" alt="">
                                    {% endif %}
                                    <div>
                                        <span class="badge badge-{{ item.enabled ? 'success' : 'danger' }}">{{ item.enabled ? 'Engedélyezve' : 'Letiltva' }}</span>
                                    </div>

                                </div>
                                <div class="text-muted mb-0">
                                    {{ item.description|raw  }}
                                </div>

                            </div>
                            <div class="col-md-4 pl-md-2">
                                <div class="text-muted">
                                    <a href="{{ path('shipping-edit', {'id': item.id}) }}" class="btn btn-sm btn-secondary mb-2">
                                        Módosít</a> <br>
                                    <p class="text-xs text-muted-extra">
                                        <em>Létrehozva: {{ item.createdAt|date('Y-m-d')}}, {{ item.createdAt|date('H:i')}}</em> <br>
                                        <em>Utolsó módosítás: {{ item.updatedAt|date('Y-m-d')}}, {{ item.updatedAt|date('H:i')}}</em>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            {% endfor %}
        {% else %}
            <li><em>{{ noResult }}</em></li>
        {% endif %}
        {{ include('/admin/_footer_of_default_page_content.html.twig') }}



        <!-- footer of default page content widget -->
        {#{{ include('/admin/_footer_of_default_page_content.html.twig') }}#}

	{% endblock %}
{% endblock %}





