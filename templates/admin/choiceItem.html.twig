<div class="visual-picker visual-picker-fluid visual-picker-sm align-top has-peekX mr-2 mb-2">
    <input type="radio" id="{{ choice.vars.id }}" name="{{ choice.vars.full_name }}" required="required" value="{{ choice.vars.value }}" {{ choice.vars.checked ? 'checked' : '' }}/>
    <label class="visual-picker-figure required" for="{{ choice.vars.id }}">
            <span class="visual-picker-content">
                <span class="tile tile-lg">
                {#<i class="text-lg fas fa-file-contract"></i>#}

                    <span class="text-smX">{{ choice.vars.label|raw }}</span>
                </span>
            </span>
    </label>
</div>