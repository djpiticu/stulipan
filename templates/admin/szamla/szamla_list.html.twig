{% extends 'admin/base_admin.html.twig' %}


{% block title %}
	Rögzített számlák
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
{% endblock %}


{% block page_content %}
		
	{% block LISTA %}

        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
            <div class="col-sm-4 text-left">
                <h2>Számlák, egyéb költségek</h2>
            </div>
            <div class="col-sm-8 text-right">
                <a href="{{ path('szamla_new') }}" class="btn btn-success">Új számla rögzítése</a>
            </div>
        </div>

		{% block AZUZENET %}
		{% for msg in app.session.flashBag.get('success') %}
			<div class="alert alert-success" role="alert">	{{ msg }} </div>
		{% endfor %}
		{% endblock %}

        <div class="table-responsive">
            <table class="table table-striped table-sm table-hover">
			  <thead>
				<tr>
                    <th scope="col">#</th>
                    <th scope="col">Dátum</th>
				    <th scope="col">Beszállító</th>
				    <th scope="col">Összeg</th>
				    <th scope="col"><i class="fas fa-ellipsis-h"></i></th>
                    <th scope="col">Módosítás időpontja</th>
                </tr>
			  </thead>
			  <tbody>
				{% if szamlak is defined %}
				{% for szamla in szamlak %}
				<tr>
                    <td class="align-middle">{{ szamla.id }}</td>
				    <td class="align-middle">{{ szamla.datum|date('Y. M d. ')}}</td>
				    <td>{{ szamla.beszallito }}</td>
                    <td class="align-middle text-right">{{ szamla.osszeg|number_format(0, ',', ' ') }}</td>
				    <td>
				  	    <a href="{{ path('szamla_show', {'id': szamla.id}) }}" class="btn-sm">
				  		    <i class="fas fa-eye"></i></a>
				  	    <a href="{{ path('szamla_edit', {'id': szamla.id}) }}" class="btn-sm">
				  		    <i class="fas fa-edit"></i></a>
				    </td>
                    <td class="align-middle">{{ szamla.updatedAt|date('Y. M d. \\| H:i')}}</td>
				</tr>
				{% endfor %}
				{% elseif szamla is defined %}
                    <tr>
                        <td class="align-middle">{{ szamla.id }}</td>
                        <td class="align-middle">{{ szamla.datum|date('Y. M d. ')}}</td>
                        <td>{{ szamla.beszallito }}</td>
                        <td class="align-middle text-right">{{ szamla.osszeg|number_format(0, ',', ' ') }}</td>
                        <td>
                            <a href="{{ path('szamla_show', {'id': szamla.id}) }}" class="btn-sm">
                                <i class="fas fa-eye"></i></a>
                            <a href="{{ path('szamla_edit', {'id': szamla.id}) }}" class="btn-sm">
                                <i class="fas fa-edit"></i></a>
                        </td>
                        <td class="align-middle">{{ szamla.updatedAt|date('Y. M d. \\| H:i')}}</td>
                    </tr>
				{% else %}
				<tr>
			        <li><em>nincs user found</em></li>
			    </tr>
				{% endif %}
			  </tbody>
			</table>
		</div>
		<div class="pagerfanta">
                {% if paginator is defined %}
					{{ pagerfanta(paginator, 'twitter_bootstrap4') }}
                {% endif %}
		</div>

	</div>
	{% endblock %}
{% endblock %}





{% block javascripts %}
    {{ parent() }}
{% endblock %}
        

