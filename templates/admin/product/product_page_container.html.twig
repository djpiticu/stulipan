{% extends 'admin/base_admin.html.twig' %}

{# this tag only applies to the forms defined in this template #}
{% form_theme form 'bootstrap_4_layout_nincs_errors.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link id="bsdp-css" rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/css/bootstrap-datepicker.standalone.css">
{% endblock %}






{% block javascripts %}
    {{ parent() }}
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/js/bootstrap-datepicker.min.js"></script>
    <script>
        jQuery(document).ready(function() {
            $('.input-group.date').datepicker({
                format: 'yyyy-mm-dd',
                endDate: '+0d'
            });
        });
    </script>
{% endblock %}
        

