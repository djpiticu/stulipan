{% extends 'admin/base_admin.html.twig' %}


{% block title %}
	Termékek
{% endblock %}

{% block page_content %}
		
	{% block LISTA %}

		<!-- page title -->
        {{ include('/admin/_title_widget.html.twig') }}

		<!-- header of default page content widget -->
        {{ include('/admin/_header_of_default_page_content.html.twig') }}

		<div class="row mb-2">
			<div class="col-lg-8">
                {#<form class="form-inline">#}
                {#<div class="form-group mb-2">#}
                {#<label for="inputPassword2" class="sr-only">Search</label>#}
                {#<input type="search" class="form-control" id="inputPassword2" placeholder="Search...">#}
                {#</div>#}
                {#<div class="form-group mx-sm-3 mb-2">#}
                {#<label for="status-select" class="mr-2">Status</label>#}
                {#<select class="custom-select" id="status-select">#}
                {#<option selected="">Choose...</option>#}
                {#<option value="1">Paid</option>#}
                {#<option value="2">Awaiting Authorization</option>#}
                {#<option value="3">Payment failed</option>#}
                {#<option value="4">Cash On Delivery</option>#}
                {#<option value="5">Fulfilled</option>#}
                {#<option value="6">Unfulfilled</option>#}
                {#</select>#}
                {#</div>#}
                {#</form>#}
			</div>
			<div class="col-lg-4">
				<div class="text-lg-right">
					<a href="{{ path('product-new') }}" class="btn btn-success mb-2 mr-2"><i class="fas fa-plus-circle mr-1"></i> Termék hozzáadása</a>
				</div>
			</div><!-- end col-->
		</div>


        <div class="table-responsive mb-3">
            <table class="table table-sm table-centered table-stripedX table-hover mb-0" id="product-list" data-page-length="25">
                <thead class="thead-light">
				<tr>
					{#<th scope="col">#</th>#}
					<th scope="col">Kép</th>
					<th scope="col">Terméknév</th>
					<th scope="col">Ár</th>
					<th scope="col">Mennyiség</th>
					<th scope="col">Kategória</th>
					<th scope="col"><i class="fas fa-ellipsis-h"></i></th>
					<th scope="col">SKU</th>
                    <th scope="col">Állapot</th>
				</tr>
				</thead>
				<tbody>
				{% if termekek is defined %}
				{% for termek in termekek %}
				<tr>
					{#<td class="align-middle">{{ termek.id }}</td>#}
                    <td class="align-middle">
                        <a href="{{ asset('/uploads/images/termekek/' ~ termek.image) }}" target="_blank">
                            <img class="img-thumbnail rounded-circle" src="{{ asset('/uploads/images/termekek/' ~ termek.image) }}" width="50px;" />
                        </a>
                    </td>
					<td class="align-middle text-left"><a href="{{ path('product-edit', {'id': termek.id}) }}" class="text-dark">
                            {{ termek.productName }}</a></td>
					<td class="align-middle text-right text-nowrap">{{ termek.grossPrice|number_format(0, ',', ' ')  }},-</td>
					<td class="align-middle text-right"><span class="badge badge-primary">{{ termek.stock }}</span></td>
					<td class="align-middle">{{ termek.category }}</td>
					<td class="align-middle">
						<a href="{{ path('product-edit', {'id': termek.id}) }}" class="btn-sm">
							<i class="fas fa-edit"></i></a>
						<a href="{{ path('site_product_show', {'id': termek.id}) }}" class="btn-sm" target="_blank">
							<i class="fas fa-external-link-alt"></i></a>
				  	</td>
					<td class="align-middle">{{ termek.sku }}</td>
					<td class="align-middle">
						<span class="badge text-mutedX font-weight-normalX badge-{% if termek.status.id == 1 %}success{% elseif termek.status.id == 2 %}info{% else %}danger{% endif %}">{{ termek.status }}</span>
					</td>
				</tr>
				{% endfor %}
				{% else %}
				<tr>
			        <li><em>Nem talált termékeket!</em></li>
			    </tr>
				{% endif %}
				</tbody>
			</table>
		</div>
		<div class="pagerfanta">
			{# { pagerfanta(paginator) } #}
		</div>

        <!-- footer of default page content widget -->
        {{ include('/admin/_footer_of_default_page_content.html.twig') }}

    </div>
	{% endblock %}
{% endblock %}