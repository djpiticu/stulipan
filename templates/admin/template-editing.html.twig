{% extends 'admin/base_admin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block page_content %}

    {% block modal %}
    {% endblock %}

    <div class="row">
        <div class="col-lg-11 mx-auto">
            {% block header %}
                <div class="row mt-3">
                    <div class="col-lg-12 mb-2">
                        {% include 'admin/template-widget-breadcrumb.html.twig' %}
                    </div>
                    <div class="col-lg-12">
                        <div class="pb-2 border-bottom mb-3">
                            <div class="page-title h1 d-inline mr-md-2 mr-1">{% block headerTitle %}{{ pageTitle }}{% endblock %}</div>
                            {% block headerTopright %}
                            {% endblock %}
                        </div>
                    </div>
                    <div class="col-lg-12">
                        {% block alertBlock %}{% endblock %}
                    </div>
                </div>
            {% endblock %}

            {% block content %}
                <div class="row row-5">
                    <div class="col-md-4 pt-0 pt-md-3">
                        <div class="mb-3 pr-md-5 pr-lg-6">
                            <p class="h5 font-weight-bold mb-2 mb-md-3">{% block moduleTitle %}{% endblock %}</p>
                            <p class="text-muted">{% block moduleDescription %}{% endblock %}</p>
                        </div>
                        {% block moduleButtons %}
                            <div class="">
                            </div>
                        {% endblock %}
                    </div>

                    <div class="col-md-8 px-0 px-md-10px">
                        <div class="card mb-20px">
                            <div class="card-body">
                                {% block contentInner %}
                                {% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endblock %}
        </div>
    </div>
{% endblock %}

