				{{ form_rest(form) }}
			</div>

            <div class="mb-3">
                <div class="form-group row">
                    <div class="col-sm-12 ml-sm-auto text-right">
                        <input type="submit" value="Mentés" class="btn btn-lgg btn-success" formnovalidate>
                        <a href="{{ path('inventory-supply-list-all') }}" class="btn btn-outline-secondary">Mégse</a>
                    </div>
                </div>
            </div>



