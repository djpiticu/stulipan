{% extends 'admin/base_admin.html.twig' %}


{% block title %}
	Terméklista
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
{% endblock %}


{% block page_content %}
		
	{% block LISTA %}

        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
            <div class="col-sm-4 text-left">
                <h2>Terméklista</h2>
            </div>
            <div class="col-sm-8 text-right">
                <a href="{{ path('inventory-supply-edit') }}" class="btn btn-success">Új bejövő áru rögzítése</a>
                <a href="{{ path('inventory-product-edit') }}" class="btn btn-success">Új termék</a>

            </div>
        </div>

		{% block AZUZENET %}
		{% for msg in app.session.flashBag.get('success') %}
			<div class="alert alert-success" role="alert">	{{ msg }} </div>
		{% endfor %}
		{% endblock %}

        <div class="table-responsive">
            <table class="table table-striped table-smX table-hover">
			  <thead>
				<tr>
                    <th scope="col">#</th>
				    <th scope="col">Megnevezés</th>
                    <th scope="col">Kategória</th>
				    <th scope="col"><i class="fas fa-ellipsis-h"></i></th>
                    <th scope="col">Módosítás időpontja</th>
                </tr>
			  </thead>
			  <tbody>
				{% if items is defined %}
				{% for item in items %}
				<tr>
                    <td class="align-middle">{{ item.id }}</td>
                    <td>{{ item.productName}}</td>
                    <td>{{ item.category}}</td>
				    <td>
				  	    <a href="{{ path('inventory-product-show', {'id': item.id}) }}" class="btn-sm">
				  		    <i class="fas fa-eye"></i></a>
				  	    <a href="{{ path('inventory-product-edit', {'id': item.id}) }}" class="btn-sm">
				  		    <i class="fas fa-edit"></i></a>
				    </td>
                    <td class="align-middle">{{ item.updatedAt|date('Y. M d. \\| H:i')}}</td>
				</tr>
				{% endfor %}
				{% elseif item is defined %}
                    <tr>
                        <td class="align-middle">{{ item.id }}</td>
                        <td>{{ item.productName}}</td>
                        <td>{{ item.category}}</td>
                        <td>
                            <a href="{{ path('inventory-product-show', {'id': item.id}) }}" class="btn-sm">
                                <i class="fas fa-eye"></i></a>
                            <a href="{{ path('inventory-product-edit', {'id': item.id}) }}" class="btn-sm">
                                <i class="fas fa-edit"></i></a>
                        </td>
                        <td class="align-middle">{{ item.updatedAt|date('Y. M d. \\| H:i')}}</td>
                    </tr>
				{% else %}
				<tr>
			        <li><em>nincs Inventory Product found</em></li>
			    </tr>
				{% endif %}
			  </tbody>
			</table>
		</div>
		<div class="pagerfanta">
                {% if paginator is defined %}
					{{ pagerfanta(paginator, 'twitter_bootstrap4') }}
                {% endif %}
		</div>

	</div>
	{% endblock %}
{% endblock %}





{% block javascripts %}
    {{ parent() }}
{% endblock %}
        

