    <div class="row">
        <div class="col-lg-12">

            <div class="border-bottom">
                <div class="form-group row">
                    <div class="col-sm-4 col-lg-4">
                        {{ form_label(statusForm.status, '', {'label_attr': {'class': 'col-form-label'}}) }}
                    </div>
                    <div class="col-sm-8 col-lg-8">
                        {{ form_widget(statusForm.status, {'attr': {'class': 'form-controlX' }}) }}
                        {{ form_errors(statusForm.status) }}
                    </div>
                </div>
            </div>
            <div class="mt-3 border-bottom">
                <div class="form-group row justi">
                    <div class="col-8 col-md-4">
                        <label class="">Értesítés az ügyfélnek</label>
                    </div>
                    <div class="col-4 col-md-8 d-flex justify-content-md-start justify-content-end">
                        <input type="checkbox" id="{{ statusForm.sendNotification.vars.id }}" name="{{ statusForm.sendNotification.vars.full_name }}" required="required" class="form-check-input" value="{{ statusForm.sendNotification.vars.value }}" {{ statusForm.sendNotification.vars.checked == 1 ? 'checked=\"checked\"' : ''}} data-switch="info">
                        <label class="form-check-label required" for="{{ statusForm.sendNotification.vars.id }}" data-on-label="Igen" data-off-label="Nem"></label>

                        {#{{ form_widget(form.enabled) }}#}
                        {{ form_errors(statusForm.sendNotification) }}
                        {% do statusForm.sendNotification.setRendered() %}
                    </div>
                </div>
            </div>
            <div class="mt-3 border-bottom">
                <div class="form-group row">
                    <div class="col-8 col-md-4">
                        <label class="">Megjegyzés hozzáadása</label>
                    </div>
                    <div class="col-4 col-md-8 d-flex justify-content-md-start justify-content-end">
                        <input type="checkbox" id="{{ statusForm.addNote.vars.id }}" name="{{ statusForm.addNote.vars.full_name }}" required="required" class="form-check-input" value="{{ statusForm.addNote.vars.value }}" {{ statusForm.addNote.vars.checked == 1 ? 'checked=\"checked\"' : ''}} data-switch="info">
                        <label class="form-check-label required" for="{{ statusForm.addNote.vars.id }}" data-on-label="Igen" data-off-label="Nem"></label>

                        {#{{ form_widget(form.enabled) }}#}
                        {{ form_errors(statusForm.addNote) }}
                        {% do statusForm.addNote.setRendered() %}
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <div class="form-group row">
                    <div class="col-sm-4 col-lg-4">
                        {{ form_label(statusForm.note, '', {'label_attr': {'class': 'col-form-label'}}) }}
                    </div>
                    <div class="col-sm-8 col-lg-8">
                        {{ form_widget(statusForm.note) }}
                        {{ form_errors(statusForm.note) }}
                    </div>
                </div>
            </div>

        </div>
    </div>

