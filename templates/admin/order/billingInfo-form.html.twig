                {{ form_errors(billingForm.billingAddress.zip) }}
            </div>
            <div class="form-group col-lg-6 pr-lg-2">
                <label for="{{ billingForm.billingAddress.province.vars.full_name }}" class="form-label">Megye</label>
                {{ form_widget(billingForm.billingAddress.province, {'attr': {'class': 'JS--form-province'}}) }}
                {{ form_errors(billingForm.billingAddress.province) }}
            </div>
            <div class="form-group col-lg-6 pl-lg-2">
                <label for="{{ billingForm.billingAddress.country.vars.full_name }}" class="form-label">Ország</label>
                {{ form_widget(billingForm.billingAddress.country, {'attr': {'class': 'form-control'}}) }}
                {#<i class="fas fa-chevron-down form-control-dropdown"></i>#}
                {{ form_errors(billingForm.billingAddress.country) }}
            </div>
            <div class="form-group col-lg-6 pr-lg-2">
                <label for="{{ billingForm.billingPhone.vars.full_name }}" class="form-label">Telefonszám</label>
                {{ form_widget(billingForm.billingPhone, {'attr': {'class': '' }}) }}
                {{ form_errors(billingForm.billingPhone|raw) }}
