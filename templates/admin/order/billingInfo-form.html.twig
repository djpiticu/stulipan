            <div class="form-group col-md-6">
                <label for="{{ billingForm.billingCompany.vars.full_name }}" class="form-label">Cégnév</label>
                {{ form_widget(billingForm.billingCompany, {'attr': {'class': 'form-controlX', 'placeholder': 'Válalkozás Kft.' }}) }}
                {{ form_errors(billingForm.billingCompany) }}
            </div>
            <div class="form-group col-lg-6 pl-lg-2">
